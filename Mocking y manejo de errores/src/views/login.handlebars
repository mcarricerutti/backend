<div class="form-signin container d-flex justify-content-center text-center" style="max-width:350px; height:100vh">
    <form method="post" action="/api/sessions/login" class="login-form align-self-center border rounded-3 p-3 w-100">
        <br />
        <h1 class="h3 mb-3 fw-normal" style="color: white;">Inicia Sesión</h1>
        <div class="form-floating mb-2">
            <input type="email" name="email" class="form-control py-auto" id="floatingInput email"
                placeholder="name@example.com" />
            <label for="floatingInput email">Email</label>
        </div>
        <div class="form-floating mb-2">
            <input type="password" name="password" class="form-control" id="floatingPassword password" placeholder="Password" />
            <label for="floatingPassword password">Password</label>
        </div>
        <div class="checkbox mb-2">
            <label>
                <input type="checkbox" value="remember-me" />
                Recordarme
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary mb-2" type="submit">Ingresa</button>
        <br />
        <button class="w-100 py-2 mb-2 btn btn-outline-secondary rounded-3" type="button"
            onclick="location.href='/api/sessions/github'">
            <svg class="bi me-1" width="16" height="16">
                <use xlink:href="#github"></use>
            </svg>
            Ingresar con GitHub
        </button>
        <div class="m-2">
            <label>
                <a href="/signup" style="color: rgb(7, 22, 109);;">¿No tienes cuenta? Registrate</a>
            </label>
            <label>
                <a href="/resetpasswordview" style="color: rgb(7, 22, 109);"> ¿Olvidaste tu contraseña?</a>
            </label>
        </div>
        <p class="mt-5 mb-3" style="color: white;">© Tienda</p>
    </form>
</div>


