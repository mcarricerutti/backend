<div class="form-signin container d-flex justify-content-center" style="max-width:450px; height:auto; margin-top:2%">
    <form method="post" action="/api/sessions/signup" class="register-form align-self-center border rounded-3 p-4 w-100" >
        <br/>
        <h1 class="h3 mb-3 fw-normal" style="color: white;">Registro</h1>
        <div class="form-floating mb-2 rounded-top">
            <input
                class="form-control"
                type="text"
                name="first_name"
                id="first_name"
                aria-placeholder="First Name"
                placeholder="First Name"
                required
            />
            <label>First Name</label>
        </div>
        <div class="form-floating mb-2">
            <input
                class="form-control"
                type="text"
                name="last_name"
                id="last_name"
                placeholder="Last Name"
                required
            />
            <label>Last Name</label>
        </div>
        <div class="form-floating mb-2">
            <input
                class="form-control"
                type="email"
                name="email"
                id="email"
                placeholder="Email"
                required
            />
            <label>Email</label>
        </div>
        <div class="form-floating mb-2">
            <div class="mb-3" >Gender
            <div class="form-check">
                <input
                    class="form-check-input"
                    type="radio"
                    id="Male"
                    name="gender"
                    value="Male"
                    checked
                />
                <label class="form-check-label" for="Male">Male</label>
            </div>
            <div class="form-check">
                <input
                    class="form-check-input"
                    type="radio"
                    id="Female"
                    name="gender"
                    value="Female"
                />
                <label class="form-check-label" for="Female">Female</label>
            </div>
        </div>
        </div>
        <div class="form-floating mb-2">
            <input
                class="form-control"
                type="number"
                name="age"
                id="age"
                placeholder="Age"
                required
            />
            <label>Age</label>
        </div>        
        <div class="form-floating mb-2">
            <input
                class="form-control"
                type="password"
                name="password"
                id="password"
                placeholder="Password"
                required
            />
            <label>Password</label>
        </div>
        <br/>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Registrate</button>
