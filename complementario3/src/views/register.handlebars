<div class="form-signin container d-flex justify-content-center" style="max-width:450px; height:100vh">
    <form method="post" action="/api/sessions/tryregister" class="register-form align-self-center border rounded-3 p-4 w-100" >
        <br/>
        <h1 class="h3 mb-3 fw-normal">Registro</h1>
        <div class="form-floating mb-2 rounded-top">
            <input type="text" name="first_name" class="form-control py-auto " id="floatingInput" placeholder="Juan" />
            <label for="floatingInput">Nombre</label>
        </div>
        <div class="form-floating mb-2">
            <input type="text" name="last_name" class="form-control py-auto " id="floatingInput" placeholder="Perez" />
            <label for="floatingInput">Apellido</label>
        </div>
        <div class="form-floating mb-2">
            <input type="email" name="email" class="form-control py-auto" id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">Email</label>
        </div>
        <div class="form-floating mb-2">
            <input type="number" name="age" min="18" max="99" class="form-control py-auto" id="floatingInput" placeholder="31" />
            <label for="floatingInput">Edad</label>
        </div>        
        <div class="form-floating mb-2">
            <input type="password" name="password"class="form-control" id="floatingPassword" placeholder="Password" />
            <label for="floatingPassword">Password</label>
        </div>
        <br/>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Registrate</button>
        <p class="mt-5 mb-3 text-body-secondary">Â© Tienda</p>
    </form>
</div>